eval $(VBoxManage controlvm Char natpf1 FLASK,tcp,,3000,,3000>/dev/null 2>/dev/null)
eval $(VBoxManage sharedfolder add "Char" --name Flask -hostpath $HOME --readonly --transient>/dev/null 2>/dev/null)
docker run -ti --name Abathur -v $HOME:/root -p 3000:3000  -e FLASK_APP=/root/app.py python:2-slim bash
echo "from flask import Flask app=Flask(__name__) @app.route('/') def
hello_world():return '<h1>\"Hello World!\"</h1>'" > /Users/limry/app.py"
docker cp ~/app.py Abathur:/root/app.py
docker exec -it Abathur pip install Flask
docker exec -it Abathur flask run --host=0.0.0.0 --port 3000
